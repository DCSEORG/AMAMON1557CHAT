@page
@model ApproveExpensesModel
@{
    ViewData["Title"] = "Approve Expenses";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong><br/>
        @Html.Raw(Model.ErrorMessage)
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 mb-3">
                <i class="bi bi-check-circle"></i> Approve Expenses
            </h1>
            <a href="/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Pending expenses:</h5>
            
            @if (Model.PendingExpenses.Count == 0)
            {
                <div class="alert alert-info">
                    No pending expenses to review.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Employee</th>
                                <th>Category</th>
                                <th>Amount</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expense in Model.PendingExpenses)
                            {
                                <tr>
                                    <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@expense.UserName</td>
                                    <td>@expense.CategoryName</td>
                                    <td>Â£@expense.AmountGBP.ToString("F2")</td>
                                    <td>@(expense.Description ?? "-")</td>
                                    <td>
                                        <button class="btn btn-sm btn-success" onclick="approveExpense(@expense.ExpenseId)">
                                            <i class="bi bi-check-lg"></i> Approve
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="rejectExpense(@expense.ExpenseId)">
                                            <i class="bi bi-x-lg"></i> Reject
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function approveExpense(id) {
            if (!confirm('Approve this expense?')) return;
            
            try {
                // Using a default reviewer ID of 2 (Bob Manager)
                const response = await fetch(`/api/expenses/${id}/approve`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(2)
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error approving expense');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function rejectExpense(id) {
            if (!confirm('Reject this expense?')) return;
            
            try {
                // Using a default reviewer ID of 2 (Bob Manager)
                const response = await fetch(`/api/expenses/${id}/reject`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(2)
                });
                
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error rejecting expense');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
    </script>
}
